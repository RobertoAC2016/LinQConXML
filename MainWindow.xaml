<Window x:Class="LinQWithXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinQWithXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <StackPanel>
        <Label Content="Desplegar lista de valores con LinQ y XML" FontSize="20"></Label>
        <StackPanel Margin="50">
            <ComboBox Name="lista" SelectionChanged="lista_SelectionChanged"></ComboBox>
            <Separator Margin="50"></Separator>
            <Label Name="display" FontSize="30"></Label>
        </StackPanel>
    </StackPanel>
</Window>
